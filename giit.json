{
    "local-sphinx": {
        "scripts": [
            "sphinx-build -b html . ${build_path}/workingtree -D version=${name}"
        ],
        "requirements": "${source_path}/docs/requirements.txt",
        "cwd": "${source_path}/docs",
        "workingtree": true
    },
    "sphinx": [
        {
            "scripts": [
                "sphinx-build -b html -D version=${name} . ${build_path}/${name}"
            ],
            "requirements": "${source_path}/docs/requirements.txt",
            "cwd": "${source_path}/docs",
            "tags.semver.filters": [
                ">6.2.0"
            ],
            "branches.regex.filters": [
                "origin/master"
            ],
            "branches.source_branch": true
        },
        {
            "scripts": [
                "versjon --docs_path ${build_path}"
            ]
        }
    ]
}