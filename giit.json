{
    "local-sphinx": {
        "scripts": [
            "sphinx-build -b html . ${build_path}/workingtree -D release=${name}"
        ],
        "requirements": "${source_path}/docs/requirements.txt",
        "cwd": "${source_path}/docs",
        "workingtree": true
    },
    "sphinx": {
        "scripts": [
            "sphinx-build -b html . ${build_path}/docs/${name}"
        ],
        "requirements": "${source_path}/docs/requirements.txt",
        "cwd": "${source_path}/docs",
        "tags.semver.filters": [
            ">6.2.0"
        ],
        "branches.regex.filters": [
            "origin/master"
        ],
        "branches.source_branch": true
    },
    "gh_pages": [
        {
            "branches.source_branch": true,
            "scripts": [
                "ghp_index --project_name stub --github_url=https://github.com/steinwurf/stub --docspath ${build_path}/docs --outpath ${build_path}/docs"
            ],
            "pip_packages": [
                "git+https://github.com/steinwurf/ghp-index.git@0f19d9d"
            ],
            "cwd": "${source_path}"
        },
        {
            "branches.source_branch": true,
            "scripts": [
                "ghp-import --no-jekyll -m 'giit push' --push --force ${build_path}/docs"
            ],
            "pip_packages": [
                "ghp-import"
            ],
            "cwd": "${source_path}"
        }
    ]
}